{{!--email address--}}
<h4 class="sign-up">Sign Up: </h4>
<form class="signup-form sign-upBtn" id="signUpDone">
 <div class="mb-3 sign-up">
  <label for="emailAddressSignup" class="form-label">Email address</label>
  <input
    type="email"
    class="form-control"
    id="emailSignup"
    placeholder="name@example.com"
  />
</div>
{{!--username log in--}}
<div class="mb-3 sign-up">
  <label for="username" class="form-label">Username</label>
  <input
    type="text"
    class="form-control"
    id="usernameSignup"
    placeholder="username"
  />
</div>
{{!--password log in--}}
<div class="mb-3 sign-up">
  <label for="password" class="form-label">Password</label>
  <input
    type="text"
    class="form-control"
    id="passwordSignup"
    placeholder="password"
  />
</div>
{{!--submit button--}}
<div class="form-group" id="signUpBtn">
    <button class="btn btn-primary" type="submit" id="submitSignup">Submit</button>
</div>
</form>

<script src="/js/signup.js"></script>